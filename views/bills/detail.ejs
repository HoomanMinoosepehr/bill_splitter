<%- include('../partials/header') %>
    <div class="container text-center" style="width: 35rem;">
        <h2 class="mt-3 text-primary">Detail:</h2>
        <div class="card mt-3">
            <div class="card-header"><%= data.created_at %></div>
            <div class="card-body">
                <table class="table text-center">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th>Total Raw Price</th>
                            <td><%= data.total %></td>
                        </tr>
                        <tr>
                            <th>Tax</th>
                            <td><%= data.tTax %></td>
                        </tr>
                        <tr>
                            <th>Tip</th>
                            <td><%= data.tipamount %></td>
                        </tr>
                        <tr>
                            <th>All in total</th>
                            <td><%= data.tPay %></td>
                        </tr>
                        <tr>
                            <th>Each Person's Share</th>
                            <td><%= data.each %></td>
                        </tr>
                    </tbody>
                </table>
                <form action="/bill_splitter/<%= data.id %>" method="post">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
<%- include('../partials/footer') %>